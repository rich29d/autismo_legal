@import 'variable.styl'

.Button
  border none
  padding 0 15px
  background-color $secondy
  border-radius 3vw 8vw 8vw
  line-height: 12vw
  box-shadow 0 3px 5px rgba(0,0,0, .2)
  color $cleanColor
  outline none
  transition all .1s ease
  font-size 6vw

.Button:active
  transform translateY(3px)
  box-shadow 0 0 0 rgba(0,0,0, .2)

+prefix-classes('Button__')
  .Close
    border-radius 50%
    padding: 6vw;
    background url("~@/assets/images/close.svg") center center / 40% no-repeat
    margin-left 11px
  
  .White
    background-color $cleanColor
    color $secondy