@import 'variable.styl'

.wrapper
  padding 5%

.Card
  padding 8vw
  border-radius 5vw
  background $cleanColor

.Block
  display block

+prefix-classes('Card__')
  .Blue
    background-color $secondy
    color $cleanColor

.Text
  color #333

+prefix-classes('Text__')
  .White
    color $cleanColor

  .Blue
    color #297bb1;

  .Bold
    font-weight: bold

  .Right
    text-align right

  for num in (2..10)
    size = (num * 2)
    .Size--{num}
      font-size "%svw" % size

+prefix-classes('Margin__')
  for num in (1..10)
    size = (num * 4)
    .Bottom--{num}      
      margin-bottom "%svw" % size
    
    .Top--{num}      
      margin-top "%svw" % size

    .Right--{num}      
      margin-right "%svw" % size

.Flex
  display flex
  flex-direction row

+prefix-classes('Flex__')
  .Middle
    align-items center

  .SpaceBetween
    justify-content space-between

  .Wrap
    flex-wrap wrap

for num in (1..11)
  .Width--{num}
    width "calc(%s% - 10px)" % (num * 8.33)

  .Width--12
    width: 100%
    

.weex-root figure.checkbox
  margin-right 5px
